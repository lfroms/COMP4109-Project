{
  "name": "cryptochat",
  "version": "1.0.0",
  "description": "An end-to-end encrypted messaging app.",
  "main": "index.js",
  "repository": "https://github.com/lfroms/COMP4109-Project.git",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:server": "tsc --project tsconfig.production.json",
    "build:next": "next build",
    "build": "yarn build:next && yarn build:server",
    "db:user:create": "createuser --no-password --createdb --echo admin",
    "db:create": "createdb --owner=admin --no-password --echo chat_app",
    "db:migrate": "yarn typeorm migration:run",
    "db:setup": "yarn db:user:create && yarn db:create && yarn db:migrate",
    "db:drop": "dropdb --if-exists --echo chat_app && dropuser --if-exists --echo admin",
    "db:reset": "yarn db:drop && yarn db:setup",
    "start:dev": "NODE_ENV=development nodemon src/index.ts -i src/pages -i src/components -i src/hooks -i src/services",
    "start:prod": "NODE_ENV=production node public/index.js",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@types/classnames": "^2.2.11",
    "@types/react-modal": "^3.12.0",
    "base64-arraybuffer": "^0.2.0",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "next": "^10.0.7",
    "pg": "^8.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.7.1",
    "react-modal": "^3.12.1",
    "react-select": "^4.3.0",
    "react-storage-hooks": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "sass": "^1.32.8",
    "socket.io": "^3.1.2",
    "socket.io-client": "^3.1.2",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-select": "^4.0.13",
    "@types/socket.io": "^2.1.13",
    "@types/socket.io-client": "^1.4.35",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2"
  }
}
